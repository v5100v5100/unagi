#Taito C075/X1-17 青い/赤いタイトーマッパ
#TFC-KHK-6900
MAPPER 82
CPU_ROMSIZE 0x20000
PPU_ROMSIZE 0x40000
DUMP_START
#Program bank は2回左シフトをした値
STEP_START i 0 0x38 8
	CPU_WRITE $7efa i 
	CPU_WRITE $7efb i | 4
	CPU_READ $8000 0x4000
STEP_END
CPU_WRITE $7efc 0x38
CPU_READ $c000 0x4000

CPU_WRITE $7ef6 0
STEP_START i 0 0x100 8
	CPU_WRITE $7ef0 i
	CPU_WRITE $7ef1 i + 2
	CPU_WRITE $7ef2 i + 4
	CPU_WRITE $7ef3 i + 5
	CPU_WRITE $7ef4 i + 6
	CPU_WRITE $7ef5 i + 7
	PPU_READ 0 0x2000
STEP_END
DUMP_END
